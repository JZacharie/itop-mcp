# iTop MCP Server Configuration
# Copy this file to .env and fill in your iTop details

# Your iTop instance URL (without trailing slash)
ITOP_BASE_URL=https://your-itop-instance.com

# iTop credentials - user must have "REST Services User" profile
ITOP_USER=your_username
ITOP_PASSWORD=your_password

# iTop REST API version (optional, default: 1.4)
ITOP_VERSION=1.4
